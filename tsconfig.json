{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strictNullChecks": true,   // enable strict null checks as a best practice
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "lib":[
            "es2015",
            "es2017",
            "dom",
        ],
        "allowSyntheticDefaultImports": false,
        "removeComments": true,
        "jsx": "react",
        "allowJs": true,
        "baseUrl": "./",
        "paths": {
            "components/*":[
                "src/components/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}